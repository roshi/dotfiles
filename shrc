# load each new shell process
[ -z "$PS1" ] && return

PS1="%c %# "

alias ll='ls -al'
alias dps='docker ps'
alias dprm='docker ps -qa | xargs -r docker rm -f'
alias dvrm='docker ps -qa | xargs -r docker rm -f && docker volume ls -q | xargs -r docker volume rm -f'
alias dirm='docker ps -qa | xargs -r docker rm -f && docker volume ls -q | xargs -r docker volume rm -f && docker images -qa | xargs -r docker rmi -f'

#vim: set ft=sh
